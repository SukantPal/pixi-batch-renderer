{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "outDir": "compile",
        "declaration": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/dist/**",
        "**/lib/**",
        "**/test/**",
        "**/scripts/**",
        "**/types/**",
        "bundles/**/*.d.ts",
        "rollup.config.js"
    ]
}