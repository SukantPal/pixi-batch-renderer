{
  "name": "pixi-batch-renderer",
  "version": "2.5.2",
  "description": "Batch rendering library for WebGL/PixiJS applications",
  "main": "lib/pixi-batch-renderer.js",
  "module": "lib/pixi-batch-renderer.es.js",
  "bundle": "dist/pixi-batch-renderer.js",
  "namespace": "PIXI.brend",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run compile && pnpm compile:types",
    "compile": "rollup -c node_modules/@pixi-build-tools/rollup-configurator/index.js --silent",
    "compile:types": "rm -rf compile && tsc; api-extractor run; echo Done",
    "prepublishOnly": "npm run build"
  },
  "author": "Shukant Pal <shukantpal@outlook.com>",
  "license": "MIT",
  "files": [
    "lib",
    "dist",
    "index.d.ts"
  ],
  "keywords": [
    "pixi",
    "pixijs",
    "webgl",
    "rendering",
    "canvas",
    "batching"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SukantPal/pixi-batch-renderer"
  },
  "peerDependencies": {
    "@pixi/constants": "^6.0.0",
    "@pixi/core": "^6.0.0",
    "@pixi/display": "^6.0.0",
    "@pixi/math": "^6.0.0",
    "@pixi/settings": "^6.0.0",
    "@pixi/utils": "^6.0.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.7.13",
    "@pixi/eslint-config": "^1.0.1",
    "@pixi/constants": "^6.0.0",
    "@pixi/core": "^6.0.0",
    "@pixi/display": "^6.0.0",
    "@pixi/math": "^6.0.0",
    "@pixi/utils": "^6.0.0",
    "@pixi-build-tools/rollup-configurator": "~1.0.11",
    "eslint": "^6.8.0",
    "eslint-plugin-jsdoc": "^15.12.2",
    "floss": "^5.0.0",
    "electron": "^12.0.0",
    "nyc": "15.1.0",
    "gh-pages": "^2.2.0",
    "rollup": "^2.3.3",
    "tslib": "^2.0.0",
    "typescript": "^3.8.3",
    "@types/node": "^12.12.2"
  }
}
